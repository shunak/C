    int n1,n2,n3,min;
  
    puts("３つの整数を入力してください。");
    
    printf("整数1:");scanf("%d",&n1);
    printf("整数2:");scanf("%d",&n2);
    printf("整数3:");scanf("%d",&n3);
    

    min=(n1>n2)?n2:n1;
    
    min=(min>n3)?n3:min; //minに格納することを忘れずに。
    
    
